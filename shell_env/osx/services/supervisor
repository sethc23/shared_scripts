
# <<< -- SUPERVISOR_root -- >>>  (can't use supervisor_user unless supervisord is non-root)
alias sv_ctl='sudo supervisorctl -s unix:///var/sockets/supervisor_root.sock'
alias sv_push_config='$SERV_HOME/supervisor_root/push_sv_config.bash'
alias sv_load='sv_push_config; sudo launchctl load -w /Library/LaunchDaemons/custom.supervisord_root.plist'
alias sv_unload='sudo launchctl unload -w /Library/LaunchDaemons/custom.supervisord_root.plist'
alias sv_reload='sv_unload; sv_load;'
alias sv_reset='sv_push_config && sv_ctl reread && sv_ctl update'
alias sv_test='ng_kill; sv_push_config; sudo /opt/local/Library/Frameworks/Python.framework/Versions/Current/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf'

# <<< -- SUPERVISOR -- >>>
alias sv_kill='sudo kill `cat $SERV_HOME/run/pids/sv_*.pid`'
alias sv_s='sv_ctl status'
alias sv_tail='sudo tail -n 100 -f /var/log/syslogs/supervisor.log'
alias sv_update='sudo supervisorctl -s unix:///var/sockets/supervisor_root.sock reread && sudo supervisorctl -s unix:///var/sockets/supervisor_root.sock update'